\providecommand*{\kdiff}{\@ifnextchar^{\k@diff}{\k@diff^{}}}
\def\k@diff^#1{%
  \mathop{\mathrm{\mathstrut d}}%
  \nolimits^{#1}\gobblespace%
}
\def\gobblespace{%
  \futurelet\diffarg\opspace%
}
\def\opspace{%
  \let\DiffSpace\!%
  \ifx\diffarg(%
    \let\DiffSpace\relax
  \else
    \ifx\diffarg[%
      \let\DiffSpace\relax
    \else
      \ifx\diffarg\{%
        \let\DiffSpace\relax
      \fi%
    \fi%
  \fi%
  \DiffSpace%
}
\providecommand*{\kderiv}[3][]{%
  \frac{\kdiff^{#1}#2}{\kdiff #3^{#1}}}

